<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <title>THE BUTTON</title>
</head>
<body>
    <audio id="click-audio"></audio>
    <audio id="explosion-audio"></audio>
    <section id="leaderboard">
        <% for(let i = 0; i < leaderboard.length; i++){ %>
            <div class="leaderboard-spot">
                <span class="leaderboard-score"><%=leaderboard[i].scores.maxScore%></span>
                <span class="leaderboard-username"><%=leaderboard[i].scores.username%></span>
            </div>
            
        <% } %>
    </section>
    <div id="numbers">
        <h1 id="score"><%= currentScore %></h1>
    </div>
    <section id="background-section">
        <button class="buttonDiv">
           
            <section id="visualButton">
                <div class="button-bottom-shadow absolute rounded"></div>
                <div class="button-bottom-shadow-rect absolute"></div>
                <div class="button-bottom absolute rounded"></div>
                <div class="button-click-bottom absolute rounded"></div>
                <div class="button-click-middle-rect absolute boxResize transition "></div>
                <div class="button-click absolute rounded needAnim transition"></div>
            </section>
            
        </button>
        <h1 id="maxScore">Max Score: <%= maxScore %></h1>
        
    </section>
    

    <!-- settings area, like mute or my github -->
    <div id="settings">
        <img src="images/sound.svg" class="grow-clickable">
    </div>
    
    <script src="js/main.js"></script>
</body>
</html>